// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Product {
  id           String   @id @default(cuid())
  name         String
  description  String
  price        Decimal
  image        String
  category     Category @relation(fields: [categoryId], references: [id])
  categoryId   String
  grindOptions Json     @default("[\"Whole Bean\", \"Espresso\", \"French Press\", \"Filter\"]")
  tastingNotes String   @default("")
  origin       String?
  altitude     String?
  process      String?
  body         Int      @default(0)
  acidity      Int      @default(0)
  stock        Int      @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  orderItems   OrderItem[]
}

model Category {
  id       String    @id @default(cuid())
  name     String    @unique
  slug     String    @unique
  products Product[]
}

model Order {
  id            String      @id @default(cuid())
  customerEmail String
  customerName  String
  total         Decimal
  status        OrderStatus @default(PENDING)
  items         Json
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  orderItems    OrderItem[]
}

enum OrderStatus {
  PENDING
  PROCESSING
  SHIPPED
  DELIVERED
  CANCELLED
}

model OrderItem {
  id          String   @id @default(cuid())
  orderId     String
  productId   String
  quantity    Int
  grindOption String
  price       Decimal
  order       Order    @relation(fields: [orderId], references: [id])
  product     Product  @relation(fields: [productId], references: [id])
}
